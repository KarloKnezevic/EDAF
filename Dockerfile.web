# syntax=docker/dockerfile:1
FROM maven:3.9.9-eclipse-temurin-21 AS build
WORKDIR /workspace
COPY . .
RUN mvn -q -pl edaf-web -am package -DskipTests

FROM eclipse-temurin:21-jre
WORKDIR /app
COPY --from=build /workspace/edaf-web/target/edaf-web-*.jar /app/edaf-web.jar
EXPOSE 7070
ENTRYPOINT ["java", "-jar", "/app/edaf-web.jar", "--server.port=7070"]
