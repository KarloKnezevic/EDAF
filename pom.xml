<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>hr.fer.zemris.edaf</groupId>
    <artifactId>edaf-parent</artifactId>
    <version>2.0.0-SNAPSHOT</version>
    <packaging>pom</packaging>

    <name>Estimation of Distribution Algorithms Framework</name>
    <description>A completely redesigned and rebuilt Java framework for Estimation of Distribution Algorithms (EDAs).</description>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.source>17</maven.compiler.source>
        <maven.compiler.target>17</maven.compiler.target>
        <junit.jupiter.version>5.9.2</junit.jupiter.version>
        <jackson.version>2.14.2</jackson.version>
    </properties>

    <modules>
        <module>core</module>
        <module>genotype-binary</module>
        <module>genotype-fp</module>
        <module>algorithm-umda</module>
        <module>algorithm-pbil</module>
        <module>algorithm-gga</module>
        <module>algorithm-ega</module>
        <module>algorithm-cga</module>
        <module>algorithm-bmda</module>
        <module>algorithm-mimic</module>
        <module>algorithm-ltga</module>
        <module>configuration</module>
        <module>statistics</module>
        <module>testing</module>
        <module>examples</module>
        <module>factory</module>
    </modules>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.junit.jupiter</groupId>
                <artifactId>junit-jupiter-api</artifactId>
                <version>${junit.jupiter.version}</version>
                <scope>test</scope>
            </dependency>
            <dependency>
                <groupId>org.junit.jupiter</groupId>
                <artifactId>junit-jupiter-engine</artifactId>
                <version>${junit.jupiter.version}</version>
                <scope>test</scope>
            </dependency>
            <dependency>
                <groupId>com.fasterxml.jackson.core</groupId>
                <artifactId>jackson-databind</artifactId>
                <version>${jackson.version}</version>
            </dependency>
            <dependency>
                <groupId>com.fasterxml.jackson.dataformat</groupId>
                <artifactId>jackson-dataformat-yaml</artifactId>
                <version>${jackson.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

</project>
