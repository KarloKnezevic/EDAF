# syntax=docker/dockerfile:1
FROM maven:3.9.9-eclipse-temurin-21 AS build
WORKDIR /workspace
COPY . .
RUN mvn -q -pl edaf-cli -am package -DskipTests

FROM eclipse-temurin:21-jre
WORKDIR /app
COPY --from=build /workspace/edaf-cli/target/edaf-cli.jar /app/edaf-cli.jar
COPY --from=build /workspace/configs /app/configs
ENTRYPOINT ["java", "-jar", "/app/edaf-cli.jar"]
CMD ["run", "-c", "/app/configs/umda-onemax-v3.yml"]
